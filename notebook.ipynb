    "def is_prime(n):\n",
    "    if n <=1:\n",
    "        return False\n",
    "    for i in range(2, int(math.sqrt(n)) + 1):\n",
    "        if n%i == 0:\n",
    "            return False\n",
    "    return True"
   ],
   "id": "29ab54c25be4a962",
   "outputs": [],
   "execution_count": 3
  },
